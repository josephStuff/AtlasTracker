@model AtlasTracker.Models.ViewModels.AssignPMViewModel


@{
    ViewData["Title"] = "Assign PM";
}

<header class="page-header">
    <h2>Project Manager</h2>
    <div class="right-wrapper text-end">
        <ol class="breadcrumbs">
            <li>
                <a>
                    <i class="bx bx-home-alt"></i>
                </a>
            </li>
            <li><span>Managers</span></li>
        </ol>
        <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>
    </div>
</header>

<h1>Project : @Model?.Project?.Name</h1>

<h4>Assign Project Manager</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="AssignPM" asp-controller="Projects">
            <input hidden asp-for="Project!.Id" />

            <h2>@Model!.Project!.Name </h2>

            <p>@Model.Project.Description </p>

            <div class="form-group">
                <label class="control-label">Select Project Manager</label>
                <select asp-for="PMID" class="form-control" asp-items="@Model.PMList">
                    <option></option>
                </select>

                <input type="submit" value="Assign" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="UnassignedProjects">Back to List</a>
</div>