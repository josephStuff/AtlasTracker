@model AtlasTracker.Models.ViewModels.ProjectMembersViewModel

<header class="page-header">
    <h2>Assign Members</h2>
    <div class="right-wrapper text-end">
        <ol class="breadcrumbs">
            <li>
                <a>
                    <i class="bx bx-home-alt"></i>
                </a>
            </li>
            <li><span>Members</span></li>
        </ol>
        <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>
    </div>
</header>


<div class="container">
    <h2>Assign Members for</h2>
    <div class="row">
        <div class="col-md-6">
            
            <strong>Project: </strong><h3> @Model!.Project!.Name</h3>
            <div class="card">
                <div class="card-header">
                    <label asp-for="@Model.UsersList" class="control-label">Assign team members for Project</label>
                </div>
                <div class="card-body">

                    <form method="post" asp-action="AssignMembers" asp-controller="Projects">
                        <input hidden asp-for="Project!.Id" />
                        <div class="col-12 mb-3">
                            <div class="form-group">
                                <select required asp-for="@Model.SelectedUsers" class="form-control" asp-items="@Model.UsersList" multiple="multiple"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <input type="submit" class="btn alert-primary" value="Assign Users" />
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Details" asp-controller="Projects" asp-route-id="@Model.Project.Id">Back to Details</a>
    </div>
</div>