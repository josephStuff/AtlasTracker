@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "/Views/Shared/_LoginLayout.cshtml";
}

<div class="panel card-sign">
    <div class="card-title-sign mt-3 text-end">
        <h2 class="title text-uppercase font-weight-bold m-0"><i class="bx bx-user-circle me-1 text-6 position-relative top-5"></i> Sign In</h2>
    </div>
    <div class="card-body">
        <form id="account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group mb-3">
                <label>Username</label>
                <div class="input-group">
                    <input asp-for="Input.Email" class="form-control form-control-lg" />
                    <span class="input-group-text">
                        <i class="bx bx-user text-4"></i>
                    </span>
                </div>
            </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            <div class="form-group mb-3">
                <div class="clearfix">
                    <label class="float-left">Password</label>
                    <a href="pages-recover-password.html" class="float-end">Lost Password?</a>
                </div>
                <div class="input-group">
                    <input asp-for="Input.Password" class="form-control form-control-lg" />
                    <span class="input-group-text">
                        <i class="bx bx-lock text-4"></i>
                    </span>
                </div>
            </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            <div class="row">
                <div class="col-sm-8">
                    <div class="checkbox-custom checkbox-default">
                        <input asp-for="Input.RememberMe" />
                        <label for="RememberMe">Remember Me</label>
                    </div>
                </div>
                <div class="col-sm-4 text-end">
                    <button type="submit" class="btn btn-primary mt-2">Sign In</button>
                </div>
            </div>
        </form>
            <span class="mt-3 mb-3 line-thru text-center text-uppercase">
                <span>or</span>
            </span>
            <div class="mb-1 text-center">
                <form class="" id="account" method="post">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-12 btn-block">
                                <button type="submit" style="width:inherit;height:min-content" class="btn btn-primary p-10 m-2" name="demoEmail" value="DemoAdminEmail">Demo Admin</button>
                                <button type="submit" style="width:inherit;height:min-content" class="btn btn-primary p-10 m-2" name="demoEmail" value="DemoPMEmail">Demo PM</button>
                                <button type="submit" style="width:inherit;height:min-content" class="btn btn-primary p-10 m-2" name="demoEmail" value="DemoDevEmail">Demo Developer</button>
                                <button type="submit" style="width:inherit;height:min-content" class="btn btn-primary p-10 m-2" name="demoEmail" value="DemoSubEmail">Demo Submitter</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <p class="text-center">Don't have an account yet? <a href="pages-signup.html">Sign Up!</a></p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}